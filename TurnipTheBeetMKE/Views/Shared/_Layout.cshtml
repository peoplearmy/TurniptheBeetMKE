<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Turnip the Beet MKE</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    <script src="https://use.fontawesome.com/4b37cef4da.js"></script>
</head>

<body>
    <a id="top"></a>
    @*<div class="navbar navbar-inverse navbar-fixed-top">*@
    <div class="nav-container">
        <nav class="overlay-nav">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Turnip the Beet MKE", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </nav>
    </div>
    <div class="bottom-border"></div>
    @*</div>*@
    <div class="container body-content">
        @RenderBody()



        <footer class="navbar navbar-default navbar-fixed-bottom text-center">
                        <img alt="Logo" class="logo" src="~/content/images/logottb2.png" />
                        <p>&copy; @DateTime.Now.Year - Turnip the Beet MKE</p>
                    
                    @*<div class="scroll">
                        <a class="btn btn-circle scrollTop" href="#top"><i class="fa fa-angle-double-up animated"></i></a>
                    </div>*@
</footer>
    </div><!--end of container-->
    
    @*<hr />*@
    @*<footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>*@
    @*</div>*@


    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
